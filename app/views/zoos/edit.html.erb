<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <h2 class="mt-5 headline">動物園編集</h2>
      <table class="table background">
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= form_with model: @zoo, url: zoo_path(@zoo), method: :patch do |f| %>
          <tr>
            <td><%= f.label :画像 %></td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td><%= f.label :動物園名 %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label :推しの動物 %></td>
            <td><%= f.text_field :favorite %></td>
          </tr>
          <tr>
            <td><%= f.label "いる動物(,で区切ると複数の動物が追加できます)" %></td>
            <td>
              <%= f.collection_check_boxes :animal_ids, Animal.where(user_id: current_user.id), :id, :name %>
              <%= f.text_field :animals, value: '' %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :場所 %></td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td><%= f.label :五段階評価 %></td>
            <td><div id="rate"></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
          </tr>

        </tbody>
      </table>
      <button type="submit" class="btn btn-outline-warning btn-block mb-5">編集</button>
      <% end %>




    </div>
    <div class="col-md-1"></div>
  </div>
</div>



<script>
  $('#rate').raty({
    starOn: "<%= asset_path('lion.emozi.png') %>",
    starOff: "<%= asset_path('siro.png') %>",
    scoreName: 'zoo[rate]'
  })
</script>
