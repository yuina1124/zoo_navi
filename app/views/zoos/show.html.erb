<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <div class="m-5">
        <% if @zoo.image.attached? %>
          <%= image_tag @zoo.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'noimage', size: "200x200" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-7">
      <h2 class="mt-5 headline"><%= @zoo.name %></h2>

        <table class="table background">
          <thead>
            <tr>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>推し動物</td>
              <td><%= @zoo.favorite %></td>
            </tr>
            <tr>
              <td>いる動物（登録済み）</td>
              <td>
                <% @zoo.animals.each do |animal| %>
                  <p><%= animal.name %></p>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>何種類（登録済み）</td>
              <td><%= @zoo.animals.count %></td>
            </tr>
            <tr>
              <td>場所</td>
              <td><%= @zoo.address %></td>
            </tr>
            <tr>
              <td>五段階評価</td>
              <td class="evaluations" data-score="<%= @zoo.rate %>"></td>
            </tr>
            <tr>
              <td>投稿者名</td>
              <td><%= @zoo.user.name %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <div class="col-md-1"></div>
  </div>
</div>








  <script>
  $('.evaluations').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    starOn: "<%= asset_path('lion.emozi.png') %>",
    starOff: "<%= asset_path('siro.png') %>",
  });
</script>
