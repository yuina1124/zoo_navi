<div class="container-fluid">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h2 class="mt-5 headline">ログイン</h2>

      <table class="table background">
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <%= form_with model: @user, url: user_session_path do |f| %>
        <tbody>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td>
              <% if devise_mapping.rememberable? %>
            </td>
            <td>
              <%= f.check_box :remember_me %>
              <%= f.label :パスワード保存 %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>
              <button type="submit" class="btn btn-outline-warning">ログイン</button>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>


      <%= render "devise/shared/links" %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>

