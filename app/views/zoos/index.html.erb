
<h2>動物園一覧</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>動物園名</th>
      <th>人気動物</th>
      <th>
        何種類
      </th>
      <th>主な動物</th>
      <th>
        五段階評価
        <%= link_to '評価の高い順', zoos_path(star_count: "true") %>
      </th>
      <th>投稿者</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @zoos.each do |zoo| %>
    <tr>
      <td><%= zoo.name %></td>
      <td><%= zoo.favorite %></td>
      <td><%= zoo.animals.count %></td>
      <td>
        <% zoo.animals.each do |animal| %>
          <%= animal.name %>
        <% end %>
      </td>
      <td class="evaluations" data-score="<%= zoo.rate %>"></td>
      <td><%= zoo.user.name %></td>
      <td>
        <%= link_to zoo_path(zoo) do %>
          もっと詳しく
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<script>
  $('.evaluations').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    starOn: "<%= asset_path('lion.emozi.png') %>",
    starOff: "<%= asset_path('siro.png') %>",
  });
</script>