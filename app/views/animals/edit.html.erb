<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <h2 class="mt-5 headline">動物編集</h2>
      <%= form_with model: @animal, url:animal_path(@animal), method: :patch do |f| %>

        <table class="table background">
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= f.label :画像 %></td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr class="m-5">
            <td>名前</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr class="m-5">
            <td>詳細</td>
            <td><%= f.text_field :introduction %></td>
          </tr>
          <tr class="m-5">
            <td>いる動物園</td>
            <td>
              <%= f.collection_check_boxes :zoo_ids, Zoo.where(user_id: current_user.id), :id, :name %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="mb-5">
        <button type="submit" class="btn btn-outline-warning btn-block">編集</button>
      </div>

      <% end %>
    </div>
    <div class="col-1"></div>
  </div>
</div>
